Options -MultiViews
	
<IfModule mod_headers.c>

	RewriteEngine on
	#RewriteBase /rmcfifa/_fonts/
	
	# font br
	#RewriteCond "%{HTTP:Accept-encoding}"	 br
	#RewriteRule "^(.*)\.eot"            	"$1\.eot\.br" [L,NC]
	#RewriteRule "^(.*)\.otf"            	"$1\.otf\.br" [L,NC]
	#RewriteRule "^(.*)\.ttf"            	"$1\.ttf\.br" [L,NC]
	#RewriteRule "^(.*)\.woff"            	"$1\.woff\.br" [L,NC]
	#RewriteRule "^(.*)\.svg"            	"$1\.svg\.br" [L,NC]
	
	# font gz
	RewriteCond "%{HTTP:Accept-encoding}" "\b(x-)?gzip\b"
	RewriteRule "^(.*)\.eot"              "$1\.eot\.gz" [L,NC]
	RewriteRule "^(.*)\.otf"              "$1\.otf\.gz" [L,NC]
	RewriteRule "^(.*)\.ttf"              "$1\.ttf\.gz" [L,NC]
	RewriteRule "^(.*)\.woff"             "$1\.woff\.gz" [L,NC]
	RewriteRule "^(.*)\.svg"              "$1\.svg\.gz" [L,NC]
	
	# font
	#RewriteCond "%{HTTP:Accept-encoding}" !"\b(x-)?gzip\b"
	#RewriteRule ^(.*)\.css$              $1\.mincss [L]
	#RewriteRule ^([^.]+)\.(css)$			$1\.min\.$2 [L,NC]

	
	<FilesMatch "(\.eot\.gz|\.otf\.gz|\.woff\.gz|\.ttf\.gz)$">
		
		# empeche le serveur de recompresser le gz
		SetEnv no-gzip 1
		
		# si mod_expires bug sur OVH du Cache-Control
		# Header set Cache-Control "max-age=216000, private" # 2.5 jours
		# Header set Cache-Control "max-age=604800, public" # 7 jours
		Header set Cache-Control: "public, max-age=2592000" 
		
		Header unset Accept-Ranges
		Header set content-encoding gzip
		Header set content-length: totalbytes
		

		Header set vary: Accept-Encoding
		
		# preco Google : https://code.google.com/archive/p/compress/
		Header unset ETag
		FileETag None
			
		
    </FilesMatch>
	
	
	<filesMatch "(\.woff\.gz)$">
		Header set content-type: "application/font-woff"
	</FilesMatch>
	
	<filesMatch "(\.ttf\.gz)$">
		Header set content-type: "application/x-font-ttf"
	</FilesMatch>
	
	<filesMatch "(\.eot\.gz)$">
		Header set content-type: "application/vnd.ms-fontobject"
	</FilesMatch>
	
	<filesMatch "(\.otf\.gz)$">
		Header set content-type: "application/x-font-opentype"
	</FilesMatch>
	
	<filesMatch "(\.woff2\.gz)$">
		Header set content-type: "application/font-woff2"
	</FilesMatch>
	
	<filesMatch "(\.svg\.gz)$">
		Header set content-type: "image/svg+xm"
	</FilesMatch>
	
	
	<FilesMatch "(\.eot\.br|\.otf\.br|\.woff\.br|\.ttf\.br)$">
		
		# empeche le serveur de recompresser le gz
		SetEnv no-gzip 1
		
		# si mod_expires bug sur OVH du Cache-Control
		# Header set Cache-Control "max-age=216000, private" # 2.5 jours
		# Header set Cache-Control "max-age=604800, public" # 7 jours
		#Header set Cache-Control: "private, max-age=900" # 25 mn
		
		Header unset Accept-Ranges
		Header set content-encoding br
		Header set content-length: totalbytes
		Header set content-type: "application/font-woff"

		Header set vary: Accept-Encoding
		
		# preco Google : https://code.google.com/archive/p/compress/
		Header unset ETag
		FileETag None
			
		
    </FilesMatch>
	
</IfModule>


<ifModule mod_expires.c>

	ExpiresActive On 
	#ExpiresDefault A900
	ExpiresDefault "access plus 900 seconds"
	#ExpiresByType application/font-woff "access plus 900 seconds"

</ifModule>